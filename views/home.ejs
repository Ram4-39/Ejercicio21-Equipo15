<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home | Company</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <%- include("partials/navbar") %>
    <%- include("partials/hero") %>
    <div class="d-flex justify-content-center mt-5">
      <ul class="list-group-flush" style="width: 40rem;">
        <% for (const article of articles) { %>
          <a href="/article/<%= article.id %>" class="text-decoration-none text-black">
            <li class="list-group-item border-top pt-3">
              <h2><%= article.dataValues.title%></h2>
              <p style="font-family: 'Lora'; font-style: italic; color: #656565ca;" class="pt-3"><%= `Created by ${article.dataValues.author} on ${articleDate[articles.indexOf(article)].parsedCreatedAt}` %></p>
            </li>
          </a>
        <% } %>
      </ul>
    </div>
    <%- include("partials/footer") %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
