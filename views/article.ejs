<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Article | Company</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/styles.css">
  </head>
  <body>
    <%- include("partials/navbar") %>
    <div class="d-flex justify-content-center align-items-center hero-image">
      <div class="d-flex flex-column">
        <h1 class="text-white text-center fw-bolder mb-3"><%= article.dataValues.title %></h1>
        <p class="text-white text-center fs-5" style="font-family: 'Lora'; font-style: italic;" ><%= `Created by ${article.dataValues.author} on ${articleDate}` %></p>
      </div>
    </div>
    
    <div class="row mx-auto mt-5">
      <div class="col-lg-8 mx-auto">
          <p style="font-family: 'Lora';" class="pt-3">
            <%= article.dataValues.content %>
          </p> 
        <div class="comment mb-1 d-flex ">
          <h3>Add your comment</h3>
        </div>
        <form action="/article/<%= article.dataValues.id %>/create-comment" method="post" class="form-group mt-2">     
          <div>
            <input type="text" id="comment" name="username" class="form-control mb-3" placeholder="Name">
            <textarea id="comment" name="content" class="form-control mb-3" style="height: 150px"></textarea>
            <div class="d-grid gap-2">
              <button class="btn-primary btn mb-5">Send</button>
            </div>
          </div>
        </form>
        <div>
          <% let commentCounter = 0 %>
          <% for (const comment of comments) {%>
            <% commentCounter++ %>
          <% } %>
          <h3 class="mt-5">Comments(<%= commentCounter %>)</h3>
           <div>
            <% for (const comment of comments) {%>
                <p>"<%= comment.content %>"</p>
                <p style="font-family: 'Lora'; font-style: italic;"><%= comment.username %></p>
                <hr>
                <% } %>
           </div>
        </div>
      </div>
    </div>
    <%- include("partials/footer") %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>